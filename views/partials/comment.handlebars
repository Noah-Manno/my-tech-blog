<div class="col s12 blog-post" data-comment-id={{id}}>
    <div class="card">
        <div class="card-header">
            <span class="date-posted black-text">{{date_created}}</span>
        </div>
        <div class="card-content">
            <h5>{{user.username}}:</h5>
            <p>{{content}}</p>
        </div>
    </div>
</div>