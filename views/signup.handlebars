 <h2>Sign Up</h2>
<div class="divider"></div>
 
 <form id="signup-form" class="row login-form">
        <div class="input-field col s10 offset-s1">
            <input id="email-signup" type="email" class="validate">
            <label for="email-signup">Enter Your Email</label>
        </div>
        <div class="input-field col col s10 offset-s1">
            <input id="username-signup" type="text" class="validate">
            <label for="username-signup">Enter New Username</label>
        </div>
        <div class="input-field col col s10 offset-s1">
            <input id="password-signup" type="text" class="validate">
            <label for="password-signup">Enter New Password</label>
        </div>
        <div class="button-container col col s10 offset-s1">
            <button id="sign-up-new" class="login" type="submit" form="signup-form">Sign Up</button>
            <a href="/login"id="sign-up"class="sign-up">Already A User? Sign In Here!
            </a>
        </div>
    </form>


    <script src="../public/js/signup.js"></script>